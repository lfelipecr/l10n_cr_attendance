<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_time1_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='pincode_setting_container']" position='after'>
                <div class="row mt16 o_settings_container" name="tiempo_max_intro">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Tiempo Máximo</span>
                            <div class="text-muted">
                                 Máximo permitido del trabajador para marcación en asistencias para check in.
                            </div>
                            <div class="text-muted">
                                <field name="time_max_check_in" widget="float_time" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>